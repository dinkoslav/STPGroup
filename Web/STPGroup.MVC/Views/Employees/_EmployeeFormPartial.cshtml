@using STPGroup.Services.ViewModels.MVCModels

@model EmployeeViewModel

<div class="row">
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.CompanyId)
    @Html.HiddenFor(m => m.CreatedOn)
    @Html.HiddenFor(m => m.ModifiedOn)
    @Html.HiddenFor(m => m.StartingDate)
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelFor(m => m.FirstName)
        </div>
        <div class="col-sm-9">
            @Html.EditorFor(m => m.FirstName)
        </div>
        @Html.ValidationMessageFor(m => m.FirstName)
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelFor(m => m.LastName)
        </div>
        <div class="col-sm-9">
            @Html.EditorFor(m => m.LastName)
        </div>
        @Html.ValidationMessageFor(m => m.LastName)
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelFor(m => m.ExperienceLevelId)
        </div>
        <div class="col-sm-9">
            @Html.DropDownListFor(m => m.ExperienceLevelId, new List<SelectListItem> {
                 new SelectListItem{ Value="1", Text="A" },
                 new SelectListItem{ Value="2", Text="B" },
                 new SelectListItem{ Value="3", Text="C" },
                 new SelectListItem{ Value="4", Text="D" } })
        </div>
        @Html.ValidationMessageFor(m => m.ExperienceLevelId)
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelFor(m => m.Salary)
        </div>
        <div class="col-sm-9">
            @Html.EditorFor(m => m.Salary)
        </div>
        @Html.ValidationMessageFor(m => m.Salary)
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.LabelFor(m => m.VacationDays)
        </div>
        <div class="col-sm-9">
            @Html.EditorFor(m => m.VacationDays)
        </div>
        @Html.ValidationMessageFor(m => m.VacationDays)
    </div>
</div>
<div class="row">
    <input type="submit" value="Submit">
</div>