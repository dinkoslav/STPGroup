@using STPGroup.Services.ViewModels.MVCModels

@model CompanyViewModel

@using (Html.BeginForm("Delete", "Companies", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        @Html.HiddenFor(m => m.Id)
        Are you sure you want to delete company @Model.Name ?
    </div>
    <div class="row">
        <input type="submit" value="Submit">
    </div>
}